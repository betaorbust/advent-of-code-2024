{
	"useTabs": true,
	"singleQuote": true,
	"proseWrap": "always",
	"htmlWhitespaceSensitivity": "css",
	"vueIndentScriptAndStyle": true,
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"proseWrap": "preserve"
			}
		}
	],
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": ["^node:", "<THIRD_PARTY_MODULES>", "^[./]"],
	"importOrderSeparation": false,
	"importOrderSortSpecifiers": true
}
